{% render "section" %}

{% schema %}
{
    "name": "Footer",
    "class": "hidden",
    "settings": [
        {
            "id": "socialLinkListTitle",
            "type": "text",
            "label": "Social Link List Title"
        }
    ],
    "blocks": [
        {
            "type": "social",
            "name": "Social Link",
            "settings": [
                {
                    "id": "title",
                    "label": "Title",
                    "type": "text"                    
                },
                {
                    "id": "url",
                    "label": "Platform URL",
                    "type": "url"
                },
                {
                    "type": "checkbox",
                    "id": "useIcon",
                    "label": "Use Icon",
                    "default": true
                },
                {
                    "type": "select",
                    "id": "platform",
                    "label": "Platform",
                    "options": [
                        {
                            "value": "instagram",
                            "label": "Instagram"
                        },
                        {
                            "value": "facebook",
                            "label": "Facebook"
                        }
                    ]
                }
            ]
        },
        {
            "type": "link_group",
            "name": "Link Group",
            "settings": [
                {
                    "id": "title",
                    "label": "Title",
                    "type": "text"                    
                },
                {
                    "id": "links",
                    "type": "link_list",
                    "label": "Links"
                }
            ]
        }
    ]
}
{% endschema %}